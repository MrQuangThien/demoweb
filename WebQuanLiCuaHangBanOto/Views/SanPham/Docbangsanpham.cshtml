@model IEnumerable<WebQuanLiCuaHangBanOto.Models.Sanpham>

@{
    ViewData["Title"] = "Đọc bảng sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    table.table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin-top: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        table.table th, table.table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: left;
            vertical-align: middle;
        }

        table.table thead th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 14px;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table.table tbody tr:hover {
            background-color: #f1f7ff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
            color: #0056b3;
        }

    img.thumbnail {
        width: 100px;
        height: auto;
        border-radius: 5px;
        object-fit: contain;
    }
</style>

<h1>Danh sách sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm sản phẩm</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Hãng</th>
            <th>Loại</th>
            <th>Giá bán</th>
            <th>Ngày SX</th>
            <th>Số lượng</th>
            <th>Hình ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Idsp</td>
                <td>@item.TenSp</td>
                <td>@item.HangXe</td>
                <td>@item.LoaiXe</td>
                <td>@item.GiaBan.ToString("N0")</td>
                <td>@item.NgaySanXuat?.ToString("dd/MM/yyyy")</td>
                <td>@item.SoLuong</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnhBase64))
                    {
                        <img src="@item.HinhAnhBase64" alt="Ảnh sản phẩm" class="thumbnail" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idsp">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Idsp">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Idsp">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
