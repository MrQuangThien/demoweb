@model WebQuanLiCuaHangBanOto.Models.Sanpham

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 container-custom">
                <h4 class="text-center text-primary">Chỉnh sửa Sản phẩm</h4>
                <hr />
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Idsp" />

                    <div class="mb-3">
                        <label asp-for="TenSp" class="form-label"></label>
                        <input asp-for="TenSp" class="form-control" />
                        <span asp-validation-for="TenSp" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HangXe" class="form-label"></label>
                        <input asp-for="HangXe" class="form-control" />
                        <span asp-validation-for="HangXe" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LoaiXe" class="form-label"></label>
                        <input asp-for="LoaiXe" class="form-control" />
                        <span asp-validation-for="LoaiXe" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GiaBan" class="form-label"></label>
                        <input asp-for="GiaBan" class="form-control" />
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NgaySanXuat" class="form-label"></label>
                        <input asp-for="NgaySanXuat" class="form-control" type="date" />
                        <span asp-validation-for="NgaySanXuat" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoLuong" class="form-label"></label>
                        <input asp-for="SoLuong" class="form-control" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    @* Hiển thị ảnh hiện tại *@
                    @if (Model.HinhAnh != null && Model.HinhAnh.Length > 0)
                    {
                        <div class="mb-3">
                            <label class="form-label">Ảnh hiện tại:</label><br />
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.HinhAnh)" style="max-width: 100%;" />
                        </div>
                    }

                    @* Upload ảnh mới *@
                    <div class="mb-3">
                        <label asp-for="HinhAnhUpload" class="form-label">Chọn ảnh mới (nếu muốn thay đổi)</label>
                        <input asp-for="HinhAnhUpload" type="file" class="form-control" />
                        <span asp-validation-for="HinhAnhUpload" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                        <a asp-action="Docbangsanpham" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
