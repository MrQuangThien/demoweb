@model WebQuanLiCuaHangBanOto.Models.Sanpham

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xóa sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-danger">Bạn có chắc muốn xóa sản phẩm này?</h3>
        <div>
            <h4>Thông tin sản phẩm</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Idsp)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Idsp)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TenSp)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TenSp)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HangXe)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.HangXe)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LoaiXe)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LoaiXe)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.GiaBan)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.GiaBan)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NgaySanXuat)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NgaySanXuat)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SoLuong)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SoLuong)</dd>

                @if (Model.HinhAnh != null && Model.HinhAnh.Length > 0)
                {
                    <dt class="col-sm-2">Ảnh</dt>
                    <dd class="col-sm-10">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.HinhAnh)" style="max-width: 200px;" />
                    </dd>
                }
            </dl>

            <!-- ✅ CHÍNH XÁC: Gửi POST đến action tên "Delete" -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Idsp" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Docbangsanpham" class="btn btn-secondary">Quay lại danh sách</a>
            </form>
        </div>
    </div>
</body>
</html>
