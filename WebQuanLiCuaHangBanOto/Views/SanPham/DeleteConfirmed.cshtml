@model IEnumerable<WebQuanLiCuaHangBanOto.Models.Sanpham>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Danh sách sản phẩm</h2>
        <p>
            <a class="btn btn-success" asp-action="Create">Thêm sản phẩm mới</a>
        </p>
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Tên SP</th>
                    <th>Hãng</th>
                    <th>Loại</th>
                    <th>Giá bán</th>
                    <th>Ngày SX</th>
                    <th>Số lượng</th>
                    <th>Ảnh</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Idsp</td>
                        <td>@item.TenSp</td>
                        <td>@item.HangXe</td>
                        <td>@item.LoaiXe</td>
                        <td>@item.GiaBan</td>
                        <td>@item.NgaySanXuat?.ToString("dd/MM/yyyy")</td>
                        <td>@item.SoLuong</td>
                        <td>
                            @if (item.HinhAnh != null && item.HinhAnh.Length > 0)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(item.HinhAnh)" style="max-width: 100px;" />
                            }
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.Idsp }, new { @class = "btn btn-sm btn-primary" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.Idsp }, new { @class = "btn btn-sm btn-info" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.Idsp }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
