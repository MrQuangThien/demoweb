@model IEnumerable<WebQuanLiCuaHangBanOto.Models.Danhgia>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Trang quản trị";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DocBangDanhGia</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        padding: 20px;
        background-color: #f4f4f4;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    p {
        margin-bottom: 10px;
    }

    a.btn {
        display: inline-block;
        padding: 8px 15px;
        background: #007bff;
        color: #fff;
        border-radius: 4px;
        text-align: center;
        transition: 0.3s;
    }

        a.btn:hover {
            background: #0056b3;
        }

</style>

<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Iddg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idkh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idsp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThangDiem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedBack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayFb)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Iddg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idkh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idsp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThangDiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeedBack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayFb)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Iddg}) |
                @Html.ActionLink("Details", "Details", new {  id=item.Iddg }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Iddg })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
