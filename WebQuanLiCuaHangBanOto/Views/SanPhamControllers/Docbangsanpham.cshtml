@model IEnumerable<WebQuanLiCuaHangBanOto.Models.Sanpham>

@{
    ViewData["Title"] = "Đọc bảng sản phẩm";    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    table.table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin-top: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        table.table th, table.table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: left;
            vertical-align: middle;
        }

        table.table thead th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 14px;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table.table tbody tr:hover {
            background-color: #f1f7ff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
    /* Thêm style cho ảnh thumbnail */
    img.thumbnail {
        width: 100px;
        height: auto;
        border-radius: 5px;
        object-fit: contain;
    }
</style>

<h1>Đọc bảng sản phẩm</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Idsp)</th>
            <th>@Html.DisplayNameFor(model => model.TenSp)</th>
            <th>@Html.DisplayNameFor(model => model.HangXe)</th>
            <th>@Html.DisplayNameFor(model => model.LoaiXe)</th>
            <th>@Html.DisplayNameFor(model => model.GiaBan)</th>
            <th>@Html.DisplayNameFor(model => model.NgaySanXuat)</th>
            <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
            <th>Hình ảnh</th> <!-- Thay vì hiện cột HinhAnhBase64 text -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Idsp)</td>
                <td>@Html.DisplayFor(modelItem => item.TenSp)</td>
                <td>@Html.DisplayFor(modelItem => item.HangXe)</td>
                <td>@Html.DisplayFor(modelItem => item.LoaiXe)</td>
                <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySanXuat)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnhBase64))
                    {
                        <img src="@item.HinhAnhBase64" alt="Hình sản phẩm" class="thumbnail" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Idsp }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Idsp }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Idsp })
                </td>
            </tr>
        }
    </tbody>
</table>
