@model WebQuanLiCuaHangBanOto.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên mật khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-container">
            <h3 class="text-center text-primary mb-4">Quên mật khẩu</h3>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Gmail" class="form-label">Nhập Gmail đã đăng ký</label>
                    <input asp-for="Gmail" class="form-control" />
                    <span asp-validation-for="Gmail" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-info mt-3 text-center">@ViewBag.Message</div>
                }
            </form>
        </div>
    </div>
</body>
</html>
