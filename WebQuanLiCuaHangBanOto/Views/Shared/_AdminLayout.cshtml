@* File: Views/Shared/_AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            padding: 15px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            flex: 1;
            padding: 20px;
        }

        .sidebar form {
            margin-bottom: 20px;
        }

        .sidebar input[type="text"] {
            width: 100%;
            padding: 8px 12px;
            border-radius: 6px;
            border: none;
            margin-bottom: 8px;
        }

        .sidebar button[type="submit"] {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 12px;
        }

            .sidebar button[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="text-center mb-3">
            <img src="~/img/logo.png" alt="Logo" class="img-fluid" style="max-width: 100px;" />
        </div>

        <h4>Admin</h4>
        <form asp-controller="TimKiem" asp-action="KetQua" method="get" class="mb-3">
            <input type="text" name="keyword" class="form-control mb-2" placeholder="Tìm kiếm..." />
            <button type="submit" class="btn btn-primary w-100">Tìm</button>
        </form>

        <a asp-controller="BaoHanh" asp-action="DocBangBaoHanh">Quản lý bảo hành</a>
        <a asp-controller="ChiTietDonHang" asp-action="DocBangChiTietDonHang">Quản lý chi tiết đơn hàng</a>
        <a asp-controller="DanhGia" asp-action="DocBangDanhGia">Quản lý đánh giá</a>
        <a asp-controller="HoaDon" asp-action="DocBangHoaDon">Quản lý hóa đơn</a>
        <a asp-controller="LogDangNhap" asp-action="DocBangLogDangNhap">Quản lý log đăng nhập</a>
        <a asp-controller="NhanVien" asp-action="DocBangNhanVien">Quản lý nhân viên</a>
        <a asp-controller="SanPham" asp-action="Docbangsanpham">Quản lý sản phẩm</a>
        <a asp-controller="TaiKhoan" asp-action="DocBangTaiKhoan">Quản lý tài khoản</a>
        <a asp-controller="ThongBao" asp-action="DocBangThongBao">Quản lý thông báo</a>
        <a asp-controller="ThongKeSLBan" asp-action="DocBangThongkeSLban">Thống kê số lượng bán</a>
        <a asp-controller="ThongTin" asp-action="DocBangThongTin">Quản lý thông tin</a>
        <a asp-controller="Login" asp-action="Logout" class="btn btn-danger mt-3">Đăng xuất</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
