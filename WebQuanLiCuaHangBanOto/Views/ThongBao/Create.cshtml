@model WebQuanLiCuaHangBanOto.Models.ThongBao

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<style>

    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
    }


    h4 {
        text-align: center;
        color: #333;
    }

  
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .col-md-4 {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    
    .control-label {
        font-weight: bold;
    }

 
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

   
    input[type="date"] {
        appearance: none;
        -webkit-appearance: none;
    }


    .text-danger {
        color: red;
        font-size: 14px;
    }

 
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Link quay lại danh sách */
    a {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #007bff;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

</style>
<body>

<h4>ThongBao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idtb" class="control-label"></label>
                <input asp-for="Idtb" class="form-control" />
                <span asp-validation-for="Idtb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTb" class="control-label"></label>
                <input asp-for="TenTb" class="form-control" />
                <span asp-validation-for="TenTb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDungTb" class="control-label"></label>
                <input asp-for="NoiDungTb" class="form-control" />
                <span asp-validation-for="NoiDungTb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDang" class="control-label"></label>
                <input asp-for="NgayDang" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="NgayDang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhTrang" class="control-label"></label>
                <input asp-for="TinhTrang" class="form-control" />
                <span asp-validation-for="TinhTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idnv" class="control-label"></label>
                <input asp-for="Idnv" class="form-control" />
                <span asp-validation-for="Idnv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idkh" class="control-label"></label>
                <input asp-for="Idkh" class="form-control" />
                <span asp-validation-for="Idkh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DocBangThongBao">Back to List</a>
</div>

</body>
</html>
