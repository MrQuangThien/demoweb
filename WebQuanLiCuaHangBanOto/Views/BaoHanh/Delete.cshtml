@model WebQuanLiCuaHangBanOto.Models.Baohanh

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

            .container h4 {
                color: #495057;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 1.25rem;
        }

            .form-group label {
                font-weight: bold;
                color: #495057;
            }

            .form-group dd {
                font-size: 1.1rem;
                padding-left: 15px;
                font-weight: 500;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-back {
            margin-top: 10px;
            color: #007bff;
            text-decoration: none;
        }

            .btn-back:hover {
                text-decoration: underline;
            }

        .d-flex {
            justify-content: space-between;
            align-items: center;
        }

        .text-center {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="container">
        <h4 class="text-center">Confirm Deletion</h4>
        <hr />
        <p class="text-center">Are you sure you want to delete this Baohanh record?</p>

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Idbh)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Idbh)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Idsp)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Idsp)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NgayMua)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NgayMua)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NgayHhbh)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NgayHhbh)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NoiDung)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NoiDung)
            </dd>
        </dl>

        <div class="d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <a asp-action="DocBangBaoHanh" class="btn-back">Back to List</a>
        </div>
    </div>

</body>
</html>
