@model WebQuanLiCuaHangBanOto.Models.Chitietdonhang

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Chi Tiết Đơn Hàng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

            .container h4 {
                color: #495057;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-back {
            color: #007bff;
            text-decoration: none;
        }

            .btn-back:hover {
                text-decoration: underline;
            }

        .form-group {
            margin-bottom: 1.25rem;
        }

            .form-group label {
                font-weight: bold;
                color: #495057;
            }

            .form-group dd {
                font-size: 1rem;
                margin-bottom: 0.5rem;
            }

            .form-group .col-sm-2 {
                font-weight: bold;
                color: #495057;
            }

        .text-center {
            margin-top: 30px;
        }

        .text-danger {
            font-size: 0.875rem;
            color: #dc3545;
        }

        .d-flex {
            justify-content: space-between;
            align-items: center;
        }

            .d-flex .btn {
                margin-top: 10px;
            }
    </style>
</head>

<body>

    <div class="container">
        <h4 class="text-center">Xác Nhận Xóa Chi Tiết Đơn Hàng</h4>
        <hr />

        <h5 class="text-center">Thông Tin Chi Tiết Đơn Hàng</h5>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idctdh)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idctdh)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idhd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idhd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idsp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idsp)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DonGia)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DonGia)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ThanhTien)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThanhTien)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoLuong)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoLuong)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="DocBangChiTietDonHang" class="btn-back">Back to List</a>
        </form>
    </div>

</body>
</html>
