@model WebQuanLiCuaHangBanOto.Models.Chitietdonhang

@{
    ViewData["Title"] = "Thêm Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h4 class="text-center">Thêm Chi Tiết Đơn Hàng</h4>
    <hr />
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Idhd" class="form-label">Mã Hóa Đơn</label>
            <select asp-for="Idhd" class="form-control" asp-items="ViewBag.Hoadons">
                <option value="">-- Chọn hóa đơn --</option>
            </select>
            <span asp-validation-for="Idhd" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Idsp" class="form-label">Sản Phẩm</label>
            <select asp-for="Idsp" class="form-control" asp-items="ViewBag.Sanphams">
                <option value="">-- Chọn sản phẩm --</option>
            </select>
            <span asp-validation-for="Idsp" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DonGia" class="form-label">Đơn Giá</label>
            <input asp-for="DonGia" type="number" step="0.01" class="form-control" id="DonGia" />
            <span asp-validation-for="DonGia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SoLuong" class="form-label">Số Lượng</label>
            <input asp-for="SoLuong" type="number" min="1" class="form-control" id="SoLuong" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ThanhTien" class="form-label">Thành Tiền</label>
            <input asp-for="ThanhTien" type="number" step="0.01" class="form-control" id="ThanhTien" readonly />
            <span asp-validation-for="ThanhTien" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a asp-action="DocBangChiTietDonHang" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateTotal() {
            let donGia = parseFloat(document.getElementById("DonGia").value) || 0;
            let soLuong = parseInt(document.getElementById("SoLuong").value) || 0;
            document.getElementById("ThanhTien").value = (donGia * soLuong).toFixed(2);
        }

        document.getElementById("DonGia").addEventListener("input", updateTotal);
        document.getElementById("SoLuong").addEventListener("input", updateTotal);
    </script>
}
