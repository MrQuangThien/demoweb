@model WebQuanLiCuaHangBanOto.Models.Hoadon
@{
    ViewData["Title"] = "Thêm hóa đơn mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Khách hàng -->
        <div class="form-group mb-3">
            <label asp-for="Idkh" class="form-label">Khách hàng</label>
            <select asp-for="Idkh" class="form-control" asp-items="ViewBag.KhachHangs">
                <option value="">-- Chọn khách hàng --</option>
            </select>
            <span asp-validation-for="Idkh" class="text-danger"></span>
        </div>

        <!-- Nhân viên -->
        <div class="form-group mb-3">
            <label asp-for="Idnv" class="form-label">Nhân viên</label>
            <select asp-for="Idnv" class="form-control" asp-items="ViewBag.NhanViens">
                <option value="">-- Chọn nhân viên --</option>
            </select>
            <span asp-validation-for="Idnv" class="text-danger"></span>
        </div>

        <!-- Ngày mua -->
        <div class="form-group mb-3">
            <label asp-for="NgayMua" class="form-label">Ngày mua</label>
            <input asp-for="NgayMua" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="NgayMua" class="text-danger"></span>
        </div>

        <!-- Sản phẩm -->
        <div class="form-group mb-3">
            <label class="form-label">Sản phẩm</label>
            <select id="SanPhamSelect" name="Idsp" class="form-control">
                <option value="" data-price="0">-- Chọn sản phẩm --</option>
                @foreach (var item in ViewBag.SanPhams as List<SelectListItem>)
                {
                    <option value="@item.Value" data-price="@item.Text">@item.Text</option>
                }
            </select>
        </div>

        <!-- Số lượng -->
        <div class="form-group mb-3">
            <label class="form-label">Số lượng</label>
            <input type="number" name="SoLuong" id="SoLuong" min="1" value="1" class="form-control" />
        </div>

        <!-- Thành tiền -->
        <div class="form-group mb-3">
            <label asp-for="ThanhTien" class="form-label">Thành tiền</label>
            <input asp-for="ThanhTien" class="form-control" id="ThanhTien" readonly />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Lưu hóa đơn</button>
            <a asp-action="DocBangHoaDon" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const spSelect = document.getElementById("SanPhamSelect");
        const slInput = document.getElementById("SoLuong");
        const thanhTienInput = document.getElementById("ThanhTien");

        function updateTotal() {
            const selected = spSelect.options[spSelect.selectedIndex];
            const donGia = parseFloat(selected.dataset.price) || 0;
            const soLuong = parseInt(slInput.value) || 0;
            thanhTienInput.value = (donGia * soLuong).toFixed(2);
        }

        spSelect.addEventListener("change", updateTotal);
        slInput.addEventListener("input", updateTotal);
    </script>
}
