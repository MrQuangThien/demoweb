@model WebQuanLiCuaHangBanOto.Models.Hoadon

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xóa hóa đơn</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            padding: 40px;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
        }

        .container {
            max-width: 700px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

        h3 {
            color: #dc3545;
            margin-bottom: 10px;
        }

        h4 {
            color: #343a40;
            margin-bottom: 25px;
        }

        dl.row {
            background-color: #fefefe;
            padding: 20px;
            border-radius: 10px;
        }

        dt {
            font-weight: 600;
            color: #6c757d;
        }

        dd {
            margin-bottom: 15px;
            color: #212529;
        }

        form {
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        a {
            text-decoration: none;
            background-color: #6c757d;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            margin-left: 10px;
            transition: background-color 0.3s ease;
        }

            a:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container">
        <h3>Bạn có chắc chắn muốn xóa hóa đơn này?</h3>
        <div>
            <h4>Chi tiết hóa đơn</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Idhd)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Idhd)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Idkh)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Idkh)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Idnv)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Idnv)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NgayMua)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayMua)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ThanhTien)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ThanhTien)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SoLuong)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuong)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="DocBangHoaDon">Quay lại danh sách</a>
            </form>
        </div>
    </div>
</body>
</html>
