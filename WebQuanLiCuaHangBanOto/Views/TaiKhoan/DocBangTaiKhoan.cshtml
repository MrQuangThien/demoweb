                @Html.DisplayNameFor(model => model.Idtk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idkh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gmail)
