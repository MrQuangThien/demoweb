            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idtk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idkh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTk)
