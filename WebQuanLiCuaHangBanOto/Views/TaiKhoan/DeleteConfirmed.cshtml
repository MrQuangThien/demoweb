@model IEnumerable<WebQuanLiCuaHangBanOto.Models.Taikhoan>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Danh sách tài khoản</h2>

        <p>
            <a asp-action="Create" class="btn btn-success">Thêm tài khoản mới</a>
        </p>

        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Khách hàng</th>
                    <th>Tên đăng nhập</th>
                    <th>Mật khẩu</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Idtk</td>
                        <td class="text-center">@item.Idkh</td>
                        <td>@item.TenTk</td>

                        @* Không nên hiện mật khẩu thật *@
                        <td>••••••</td>

                        <td>@item.Gmail</td>
                        <td>@item.Role</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Idtk" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.Idtk" class="btn btn-sm btn-danger ms-1">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
