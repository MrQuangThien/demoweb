    @model WebQuanLiCuaHangBanOto.Models.Taikhoan

    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit Tài khoản</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container mt-5">
            <h3 class="text-center text-primary mb-4">Chỉnh sửa tài khoản</h3>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Idtk" />

                        <div class="mb-3">
                            <label asp-for="Idkh" class="form-label">ID Khách hàng</label>
                            <input asp-for="Idkh" class="form-control" />
                            <span asp-validation-for="Idkh" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenTk" class="form-label">Tên tài khoản</label>
                            <input asp-for="TenTk" class="form-control" />
                            <span asp-validation-for="TenTk" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                            <input asp-for="MatKhau" class="form-control" type="password" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gmail" class="form-label">Gmail</label>
                            <input asp-for="Gmail" class="form-control" />
                            <span asp-validation-for="Gmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">Vai trò</label>
                            <select asp-for="Role" class="form-control">
                                <option value="">-- Chọn vai trò --</option>
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <a asp-action="DocBangTaiKhoan" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
    </html>
